<%- include('includes/head') %>
  <%- include('includes/navbar') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
          <h1 class="display-1 text-center ">login</h1>
          <p class="text-center lead">
            faça login abaixo
          </p>

          <%- include('includes/messages') %>

            <div class="row">
              <div class="col-lg">
                <h4 class="text-center">Faça seu cadastro</h4>
                <form class="form-control form-cadastro" action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <div class="form-group email">
                    <label for="email">Email</label>
                    <input class="form-control" name="email">

                  </div>
                  <div class="form-group senha">
                    <label for="senha" class="mt-4">Senha</label>
                    <input type="password" class="form-control" name="senha">

                  </div>
                  <button type="submit" class="btn btn-primary mt-3">Criar minha conta</button>
                </form>
              </div>

              <div class="col-lg">
                <h4 class="text-center">Entre em sua conta</h4>
                <form class="form-control form-login" action="/login" method="POST">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <div class="form-group email">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email">
                  </div>
                  <div class="form-group senha">
                    <label for="senha" class="mt-4">Senha</label>
                    <input type="password" class="form-control" name="senha">
                  </div>
                  <button type="submit" class="btn btn-primary mt-3">Entrar</button>
                </form>
              </div>

            </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>