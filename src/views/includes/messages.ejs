<% if (errors.length > 0) { %>
<div class="row">
    <div class="col-lg-8 my-3 mx-auto">
        <div class="alert alert-danger">
            <% errors.forEach(erro => { %>
                <%= erro%><br>
            <%}); %>
        </div>
    </div>
</div>
<% } %>

<% if (success.length > 0) { %>
    <div class="row">
        <div class="col-lg-8 my-3 mx-auto">
            <div class="alert alert-success">
                <% success.forEach(success => { %>
                    <%= success%><br>
                <%}); %>
            </div>
        </div>
    </div>
    <% } %>