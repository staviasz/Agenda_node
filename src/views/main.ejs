<%- include('includes/head') %>
<%- include('includes/navbar', {caminho}) %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <h1 class="display-1 text-center ">Agenda</h1>
            <p class="text-center lead">Seus contatos est√£o abaixo</p>
            <div class="responsive-table">
                <% if(contatos.length > 0) { %>
                    <table class="table my-3">
                        <% contatos.forEach(contato => { %>
                            <tr>
                                <td><%= contato.nome %></td>
                                <td><%= contato.sobrenome %></td>
                                <td><%= contato.telefone %></td>
                                <td><%= contato.email %></td>
                                <td><a href="/contato/<%= contato._id %>">Editar</a></td>
                                <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Deletar</a></td>
                            </tr>
                        <% }); %>
                    </table>
                    <% } else { %>
                        <p class="text-center lead">Sua agenda esta vazia</p>
                    <% } %>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>


<%- include('includes/footer') %>



