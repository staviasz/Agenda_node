<%- include('includes/head') %>
<%- include('includes/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <h1 class="display-1 text-center ">contato</h1>
            <p class="text-center lead">contatos</p>
        </div>
        <%- include('includes/messages') %>
        
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <% if(contato._id) { %>
                    <form class="form-control" action="/contato/edit/<%= contato._id %>" method="post">
                <% } else { %>
                    <form class="form-control" action="/contato" method="POST">
                <% } %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input value="<%= contato.nome %>" class="form-control mb-3" name="nome">
                    </div>
                    <div class="form-group">
                        <label for="sobrenome">Sobrenome</label>
                        <input value="<%= contato.sobrenome %>" type="text" class="form-control mb-3" name="sobrenome">
                    </div>
                    <div class="form-group">
                        <label for="telefone">Telefone</label>
                        <input value="<%= contato.telefone %>" class="form-control mb-3" name="telefone">
                    </div>
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input value="<%= contato.email %>" class="form-control mb-3" name="email">
                    </div>
                    <button type="submit" class="btn btn-primary">Criar minha conta</button>
                </form>
            </div>
        </div>
    </div>
</div>


<%- include('includes/footer') %>
